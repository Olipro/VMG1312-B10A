include $(WLCFGDIR)/wlconfig_lx_router_apsta
include $(WLCFGDIR)/wlconfig_lx_wl_dslcpepcisdcfg
include $(WLCFGDIR)/wlconfig_lx_wl_dslcpe

# features

#supported chips default as-is by the driver
SUPPORTED_CHIPS := 4321 4322 43222 43112 6362 4313 43224 43225 43226 43227 43228 43428 4331 43217 43131 4360

# 
# D11 Core Revs
# 11 (4321a1), 
# 12 (4321b/c),
# 16 (4322/43222/43112),  18 (43224a0), 
# 22 (6362/43226) 23 (43224b0),
# 24 (4313),  26 (4331a0),      
# 29 (4331b0), 30(43228/43217/43131).                                   

# D11CONF2 D11 Core Rev > 31, Rev 40(4360a0) 42(4360B0)

WLFLAGS += -DD11CONF=0x65c51800  
WLFLAGS += -DACONF=0
WLFLAGS += -DGCONF=0
WLFLAGS += -DNCONF=0x0000301ff
WLFLAGS += -DLPCONF=0x2
WLFLAGS += -DD11CONF2=0x500